# =============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env for development or .env.production.local for production
# Replace all placeholder values with your actual configuration

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Get these values from Firebase Console > Project Settings > General > Your apps
# Create a web app if you haven't already

# Firebase API Key (Public - safe to expose in client-side code)
NEXT_PUBLIC_FIREBASE_API_KEY=AIzaSyExample_Replace_With_Your_Actual_API_Key

# Firebase Auth Domain (Your project ID + .firebaseapp.com)
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# Firebase Realtime Database URL (if using Realtime Database)
# Format: https://your-project-id-default-rtdb.region.firebasedatabase.app
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.asia-southeast1.firebasedatabase.app

# Firebase Project ID (Your unique project identifier)
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id

# Firebase Storage Bucket (Your project ID + .appspot.com or custom domain)
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Firebase Messaging Sender ID (Numeric ID for FCM)
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012

# Firebase App ID (Unique identifier for your app)
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890abcdef

# Firebase Measurement ID (Google Analytics 4 - optional)
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Name (Displayed in browser title, meta tags)
NEXT_PUBLIC_APP_NAME=Umar Farooq Al Madani - Islamic Studies

# Application URL (Your domain - used for SEO, sitemap generation)
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application Description (Used in meta tags, SEO)
NEXT_PUBLIC_APP_DESCRIPTION=Islamic Studies Website featuring Quranic interpretations, Hadith discussions, and Islamic teachings by Umar Farooq Al Madani

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Node Environment (development, production, test)
NODE_ENV=development

# =============================================================================
# ADMIN CONFIGURATION (Optional)
# =============================================================================

# Admin Email (Used for additional security checks - optional)
ADMIN_EMAIL=admin@your-domain.com

# =============================================================================
# ANALYTICS & TRACKING (Optional)
# =============================================================================

# Google Analytics 4 Measurement ID (Optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager ID (Optional)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# =============================================================================
# SECURITY CONFIGURATION (Optional)
# =============================================================================

# NextAuth Secret (Required if using NextAuth.js - generate a random string)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-nextauth-secret-key-here

# NextAuth URL (Your application URL)
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# API CONFIGURATION (Optional)
# =============================================================================

# API Rate Limiting (requests per minute)
API_RATE_LIMIT=100

# API Timeout (milliseconds)
API_TIMEOUT=10000

# =============================================================================
# EMAIL CONFIGURATION (Optional - for contact forms, notifications)
# =============================================================================

# SMTP Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid API Key (alternative to SMTP)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# =============================================================================
# SOCIAL MEDIA & SEO (Optional)
# =============================================================================

# Social Media Handles (used in meta tags)
NEXT_PUBLIC_TWITTER_HANDLE=@umarfarooq
NEXT_PUBLIC_FACEBOOK_PAGE=UmarFarooqAlMadani
NEXT_PUBLIC_YOUTUBE_CHANNEL=UCxxxxxxxxxxxxxxxxx

# Default Social Media Image (path to image in public folder)
NEXT_PUBLIC_DEFAULT_OG_IMAGE=/images/og-image.jpg

# =============================================================================
# DEVELOPMENT TOOLS (Development Only)
# =============================================================================

# Enable detailed error reporting in development
NEXT_PUBLIC_ENABLE_DEBUG=true

# Enable React DevTools in production (not recommended)
NEXT_PUBLIC_ENABLE_REACT_DEVTOOLS=false

# =============================================================================
# PERFORMANCE & MONITORING (Optional)
# =============================================================================

# Vercel Analytics (if using Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# Sentry DSN (for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=true
NEXT_PUBLIC_ENABLE_SEARCH=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# 2. Variables without NEXT_PUBLIC_ are server-side only
# 3. Never commit .env files with real values to version control
# 4. Use .env.local for local development overrides
# 5. Use .env.production.local for production-specific values
# 6. Restart your development server after changing environment variables
# 
# =============================================================================
