# =============================================================================
# LOCAL DEVELOPMENT OVERRIDES
# =============================================================================
# Copy this file to .env.local for local development overrides
# This file takes precedence over .env and is ignored by git

# =============================================================================
# LOCAL FIREBASE CONFIGURATION (Optional)
# =============================================================================
# Uncomment and use these if you want to use a different Firebase project
# for local development (e.g., a personal test project)

# NEXT_PUBLIC_FIREBASE_API_KEY=your_local_test_firebase_api_key
# NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-local-test-project.firebaseapp.com
# NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your-local-test-project-default-rtdb.region.firebasedatabase.app
# NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-local-test-project
# NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-local-test-project.appspot.com
# NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
# NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890abcdef
# NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# LOCAL DEVELOPMENT SETTINGS
# =============================================================================

# Override app URL for local testing
# NEXT_PUBLIC_APP_URL=http://localhost:3000

# Enable/disable features for local testing
# NEXT_PUBLIC_ENABLE_DEBUG=true
# NEXT_PUBLIC_ENABLE_REACT_DEVTOOLS=true

# =============================================================================
# LOCAL TESTING CONFIGURATIONS
# =============================================================================

# Test admin email
# ADMIN_EMAIL=test@localhost

# Local analytics (disable for development)
# NEXT_PUBLIC_GA_ID=

# Local authentication settings
# NEXTAUTH_SECRET=local-development-secret-not-for-production
# NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable detailed logging
# NEXT_PUBLIC_ENABLE_VERBOSE_LOGGING=true

# Enable performance profiling
# NEXT_PUBLIC_ENABLE_PROFILING=true

# Mock external services for offline development
# NEXT_PUBLIC_MOCK_EXTERNAL_APIS=true

# =============================================================================
# LOCAL FEATURE FLAGS
# =============================================================================

# Test new features locally
# NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=true
# NEXT_PUBLIC_ENABLE_BETA_UI=true

# =============================================================================
# LOCAL API SETTINGS
# =============================================================================

# Increase timeout for slow local connections
# API_TIMEOUT=30000

# Disable rate limiting for local development
# API_RATE_LIMIT=1000

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. This file is for local development overrides only
# 2. Copy to .env.local and uncomment variables you want to override
# 3. .env.local is automatically ignored by git
# 4. Variables here take precedence over .env
# 5. Useful for testing different configurations locally
# 
# ============================================================================= 